<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:chatview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ChatActivity">


    <co.intentservice.chatui.ChatView
        android:id="@+id/chatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        chatview:backgroundColor="#FFFFFF"
        chatview:bubbleBackgroundRcv="#03A9F4"
        app:messageTextAppearance="@color/black"
        chatview:bubbleBackgroundSend="#EFEFEF"
        chatview:bubbleElevation="flat"
        chatview:inputBackgroundColor="#EDEDED"
        chatview:inputTextSize="14sp"
        chatview:sendBtnBackgroundTint="@color/colorAccent"
        chatview:sendBtnIcon="@drawable/ic_baseline_send_24"
        chatview:sendBtnIconTint="#fff" />

</androidx.constraintlayout.widget.ConstraintLayout>